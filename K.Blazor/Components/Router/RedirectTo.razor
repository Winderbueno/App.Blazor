@inject NavigationManager Nav

@code {
    [Parameter]
    public string Route { get; set; } = "home";

    [Parameter]
    public bool AddReturnUrl { get; set; } = false;

    protected override void OnInitialized()
    {
        Route += (AddReturnUrl ? $"?returnUrl={Uri.EscapeDataString(Nav.ToBaseRelativePath(Nav.Uri))}" : "");
        Nav.NavigateTo(Route);
    }
}