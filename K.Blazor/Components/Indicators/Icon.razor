@inherits KComponent

<span class=@($"oi oi-{Id} " + CssClass + (OnClick.HasDelegate ? " clickable":""))
      style="@($"--color:{(Color == null ? "currentColor" : Color.ToCssVar())};")
                @($"--top:{(Id == "circle-x" ? -0.5 : -2)}px;")"
      aria-hidden="true"
      @onclick=OnClick />

@code {
    [Parameter]
    public string Id { get; set; } = "plus";
}