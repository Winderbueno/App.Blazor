@using K.Blazor.Components.Contents.Style

<ListStyle>
    <ul class="datas">
        @foreach (WordTranslation data in Datas)
        {
            <li>
                <Tooltip Text=@data.Comment><b>@data.English.</b></Tooltip>
                <span hidden="@(!Show)">@($" {data.Pinyin}")</span>
            </li>
        }
    </ul>
</ListStyle>

@code {
    [Parameter]
    public IEnumerable<WordTranslation> Datas { get; set; } = new List<WordTranslation>();

    [CascadingParameter]
    public bool Show { get; set; } = true;
}