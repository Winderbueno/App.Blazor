@using K.Blazor.Components.Containers

<Card Loading="Words == null">
    <Container FlexAlign="start" FlexJustify="space-between">
        <CascadingValue Value=show>   
            <DataList>
                @foreach (WordAppDto word in Words!)
                {           
                    <WordDisplay Word=word />
                }
            </DataList>
        </CascadingValue>
    </Container>
</Card>

<Actions>
    <Tooltip Text=@(t[show ? "action.hide" : "action.show"])>
        <Button @onclick="_ => show = !show" Icon=@(show ? "minus" : "eye") />
     </Tooltip>
</Actions>

@code {
    [Parameter]
    public IEnumerable<WordAppDto>? Words { get; set; }

    private bool show = true;
}