<Card Title="Time">
    <CardTitle>
        <Button @onclick="_ => show = !show">@(show ? "Hide" : "Show")</Button>
    </CardTitle>
    <CardBody>
        <Container FlexColumn>
            <Container>
                <Card Title="Period" Level=2><WordTranslationList Datas=Period Show=show /></Card>
                <Card Title="Days & Months" Level=2>
                    <div>Days. (xīng qī | zhōu) + @("(<number>, Except Sunday -> rì/tiān)")</div>
                    <div>Ex. xīng qī yī, xīng qī èr, xīng qī rì</div>
                    <div>Months. @("<number>") + yuè</div>
                    <div>Ex. yī yuè, èr yuè</div>
                </Card>
            </Container>
            <Container>
                <Card Title="Around Day" Level=2><WordTranslationList Datas=Days Show=show /></Card>
                <Card Title="DayTime" Level=2><WordTranslationList Datas=Daytime Show=show /></Card>
                <Card Title="Seasons" Level=2><WordTranslationList Datas=Seasons Show=show /></Card>
            </Container>
        </Container>
    </CardBody>
</Card>

@code {
    private bool show = true;

    private List<WordTranslation> Period = new()
    {
        new() { English = "Day", Pinyin = "tiān" },
        new() { English = "Month", Pinyin = "yuè" },
        new() { English = "Year", Pinyin = "nián" },
        new() { English = "Century", Pinyin = "shìjì" },
        new() { English = "Season", Pinyin = "jìjié" },
    };

    private List<WordTranslation> Days = new()
    {
        new() { English = "Day before yesterday", Pinyin = "qiántiān" },
        new() { English = "Yesterday", Pinyin = "zuótiān" },
        new() { English = "Today", Pinyin = "jīntiān" },
        new() { English = "Tommorow", Pinyin = "míngtiān" },
        new() { English = "Day after tommorow", Pinyin = "hòutiān" }
    };

    private List<WordTranslation> Daytime = new()
    {
        new() { English = "Now", Pinyin = "xiànzài" },
        new() { English = "Morning", Pinyin = "zăoshang" },
        new() { English = "Afternoon", Pinyin = "xiàwŭ" },
        new() { English = "Evening", Pinyin = "wănshang" },
        new() { English = "Night", Pinyin = "yèwǎn" },
    };

    private List<WordTranslation> Seasons = new()
    {
        new() { English = "Spring", Pinyin = "chūntiān" },
        new() { English = "Summer", Pinyin = "xiàtiān" },
        new() { English = "Autumn", Pinyin = "qiūtiān" },
        new() { English = "Winter", Pinyin = "dōngtiān" },
    };
}