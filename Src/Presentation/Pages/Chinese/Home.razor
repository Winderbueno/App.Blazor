@using Presentation.Pages.Chinese.Components

@page "/chinese"

<h1>Chinese</h1>

<Container FlexAlign="center" FlexJustify="center">

    <Container FlexColumn>
        <Card Title="Personal Pronoun">
            <WordTranslationList Datas=PersonalPronouns />
            Add "Menn" for plural (we, you, they)
        </Card>

        <Card Title="Interrogatives"><WordTranslationList Datas=Interrogatives /></Card>
        <Card Title="Negation">Bù</Card>
    </Container>

    <Verbs />

    <Container FlexColumn>
        <Card Title="Adjectives"><WordTranslationList Datas=Adjectives /></Card>
        <Card Title="Adverbs"><WordTranslationList Datas=Adverbs /></Card>
    </Container>

    <Time />
</Container>

