@using K.Blazor.Components.Router
@using K.Blazor.Services
@using Presentation.Middlewares.Layout;

@inject KConfService kConf

<ErrorHandler>
    <Toaster />

    <CascadingAuthenticationState>
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                @*<FocusOnNavigate RouteData="@routeData" Selector="h1" />*@
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        @if (!context.User.Identity!.IsAuthenticated)
                        {
                            <SplashScreen Message="Redirect to Sign in"/>
                            <RedirectTo AddReturnUrl/>
                        }
                        else {
                            <RedirectTo Route="unauthorized" />
                        }
                    </NotAuthorized>
                    <Authorizing>
                        Authorizing...
                    </Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <PageTitle>Not Found</PageTitle>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p role="alert">Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>
</ErrorHandler>

@code {
    // Configure K.Blazor library
    protected override void OnInitialized()
        => kConf.SetSelectFieldOptions(new()
            {
                DefaultOptionName = x => t[x.DisplayName()].Contains("##") ? x?.ToString() : t[x.DisplayName()],
                RequiredMessage = () => t["k-blazor-msg.required"],
                NoResultMessage = () => t["k-blazor-msg.no-result"]
            });
}